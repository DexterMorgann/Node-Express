pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = 'ap-south-1'
        S3_BUCKET = 'jenkins1st-task'
        NVM_DIR = '/var/lib/jenkins/.nvm'
    }

    stages {

        stage('Checkout Code') {
            steps {
                git(
                    branch: 'main',
                    credentialsId: '7cca05d8-4ab2-4f21-a761-ecda5edf8793',
                    url: 'https://github.com/DexterMorgann/Node-Express.git'
                )
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    export NVM_DIR="/var/lib/jenkins/.nvm"
                    [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
                    nvm use 14

                    node -v
                    npm -v

                    npm install
                '''
            }
        }

        stage('Build React App') {
            steps {
                sh '''
                    export NVM_DIR="/var/lib/jenkins/.nvm"
                    [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
                    nvm use 14

                    npm run build
                '''
            }
        }

        stage('Upload to S3') {
            steps {
                withAWS(credentials: 'AWS Access key', region: "${AWS_DEFAULT_REGION}") {
                    sh 'aws s3 sync build/ s3://$S3_BUCKET --delete'
                }
            }
        }
    }

    post {
        success { echo "Deployment to S3 Successful!" }
        failure { echo "Deployment Failed! Check logs." }
    }
}
